{% extends 'MopaBootstrapBundle::base_less.html.twig' %}

{% block title %}Pathfinder Character Manager - {% block subtitle "Home" %}{% endblock %}

{% block head_style %}
    {% stylesheets filter='less'
        '../app/Resources/less/bootstrap.less'
        '@CraueFormFlowBundle/Resources/assets/css/buttons.css'
        'https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css'
        '@TroulitePathfinderBundle/Resources/public/vendor/wysiwyg.js/src/wysiwyg-editor.css'
        '@TroulitePathfinderBundle/Resources/public/vendor/codemirror/lib/codemirror.css'
        '@TroulitePathfinderBundle/Resources/public/vendor/codemirror/addon/lint/lint.css'
        '@TroulitePathfinderBundle/Resources/public/vendor/codemirror/theme/base16-dark.css'
        'bundles/troulitepathfinder/css/*.css'
    %}
        <link type="text/css" rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}

{% block page_header %}{% endblock %}

{% block navbar %}
    {{ render_esi(
        path(
            'layout_header',
            app.request.attributes.get('_route_params')|merge({ '_route': app.request.attributes.get('_route')})
        )
    ) }}
{% endblock %}

{% block foot_script %}
    {% javascripts
    'http://code.jquery.com/jquery-1.11.1.min.js'
    '@MopaBootstrapBundle/Resources/public/bootstrap/js/tooltip.js'
    '@MopaBootstrapBundle/Resources/public/bootstrap/js/collapse.js'
    '@MopaBootstrapBundle/Resources/public/bootstrap/js/dropdown.js'
    '@MopaBootstrapBundle/Resources/public/bootstrap/js/modal.js'
    '@MopaBootstrapBundle/Resources/public/bootstrap/js/popover.js'
    '@MopaBootstrapBundle/Resources/public/bootstrap/js/affix.js'
    '@MopaBootstrapBundle/Resources/public/bootstrap/js/scrollspy.js'
    '@MopaBootstrapBundle/Resources/public/js/mopabootstrap-collection.js'
    '@MopaBootstrapBundle/Resources/public/js/mopabootstrap-subnav.js'
    '@TroulitePathfinderBundle/Resources/public/vendor/wysiwyg.js/dist/wysiwyg-editor.min.js'
    '@TroulitePathfinderBundle/Resources/public/vendor/codemirror/lib/codemirror.js'
    '@TroulitePathfinderBundle/Resources/public/vendor/codemirror/mode/javascript/javascript.js'
    '@TroulitePathfinderBundle/Resources/public/vendor/codemirror/addon/edit/closebrackets.js'
    '@TroulitePathfinderBundle/Resources/public/vendor/codemirror/addon/edit/matchbrackets.js'
    '@TroulitePathfinderBundle/Resources/public/vendor/jsonlint/lib/jsonlint.js'
    '@TroulitePathfinderBundle/Resources/public/vendor/codemirror/addon/lint/lint.js'
    '@TroulitePathfinderBundle/Resources/public/vendor/codemirror/addon/lint/json-lint.js'
    '@TroulitePathfinderBundle/Resources/public/*.js'
    '@TroulitePathfinderBundle/Resources/public/js/*.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block footer %}
    {{ render_esi(
        path(
            'layout_footer',
            app.request.attributes.get('_route_params')|merge({ '_route': app.request.attributes.get('_route')})
        )
    ) }}
{% endblock %}

{% block content_row %}{% block content %}{% endblock %}{% endblock %}