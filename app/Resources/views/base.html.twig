<!DOCTYPE html>
<html>
<head>
    <title>{% block title "Pathfinder Character Manager" %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% stylesheets
        '@CraueFormFlowBundle/Resources/assets/css/buttons.css'
        '@TroulitePathfinderBundle/Resources/public/css/flow_steps.css'
        '@TroulitePathfinderBundle/Resources/public/css/flow_skills.css'
        '@TroulitePathfinderBundle/Resources/public/css/characters_show.css'
    %}
        <link type="text/css" rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
    {% block stylesheets %}{% endblock stylesheets %}
    <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet" media="screen">
    <!-- HTML5 Shim and Respond.js add IE8 support of HTML5 elements and media queries -->
    {% include 'BraincraftedBootstrapBundle::ie8-support.html.twig' %}
</head>

<body>
<nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse"
                    data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path('index') }}">Pathfinder Character Manager</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            {% block navbar_current %}{% endblock %}
            <ul class="nav navbar-nav navbar-right">
                {% include('@TroulitePathfinder/navbar-right.html.twig') %}
                {% render(controller("TroulitePathfinderBundle:Security:login")) %}
            </ul>
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container-fluid -->
</nav>

{% block body %}
    {% for type, messages in app.session.flashbag.all %}
        {% for message in messages %}
            <div class="alert alert-{{ type }} alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span
                            class="sr-only">Close</span></button>
                <strong>Notice</strong>: {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <div class="container-fluid">
        {% block content %}{% endblock %}
    </div>
{% endblock %}
{% javascripts
    'js/jquery.js'
    'js/bootstrap.js'
    'js/bootstrap_popover_9.js'
    '@TroulitePathfinderBundle/Resources/public/*.js'
%}
<script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
</body>
</html>
