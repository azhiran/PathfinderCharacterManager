{% extends '::base.html.twig' %}

{% block content -%}
    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Shortdescription</th>
                <th>Longdescription</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('subclasses_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.shortDescription }}</td>
                <td>{{ entity.longDescription }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('subclasses_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('subclasses_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('subclasses_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
