{# from http://bootsnipp.com/snippets/featured/e-commerce-footer-responsive #}
<div class="footer" id="footer">
    <div class="container">
        <div class="row">
            <div class="col-lg-2  col-md-2 col-sm-4 col-xs-6">
                <h3>{{ 'language'|trans }}</h3>
                <ul>
                    {% for lang in availableLocales %}
                        <li>
                            <a href="{{ path(route, routeParams|merge({ '_locale': lang })) }}">
                                {{ intl.languageName(lang) }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</div>