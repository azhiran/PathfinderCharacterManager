<div class="row">
    <div class="col-md-5">
        <h2>Ability Score Costs</h2>
        <table class="table table-hover table-striped table-condensed table-responsive">
            <thead>
            <tr>
                <th>{{ 'Score'|trans }}</th>
                <th>{{ 'Cost'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for score, cost in ability_scores.costs %}
                <tr>
                    <td>{{ score }}</td>
                    <td>{{ cost }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="col-md-5">
        <h2>Ability Score Points</h2>
        <table class="table table-hover table-striped table-condensed table-responsive">
            <thead>
            <tr>
                <th>{{ 'Campain Type'|trans }}</th>
                <th>{{ 'Points'|trans }}</th>
            </tr>
            </thead>
            <tbody>
                {% for type, points in ability_scores.points %}
                <tr>
                    <td>{{ type|capitalize|trans }} {{ 'Fantasy'|trans }}</td>
                    <td>{{ points }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
