{% extends '::base.html.twig' %}

{% block title "Skills" %}

    {% block content -%}
        <div class="container">
            <table id="abilities" class="table table-striped table-hover table-responsive">
                <thead>
                <th>Skill</th>
                {% for class in classes %}
                    <th>{{ class }}</th>
                {% endfor %}
                <th>Untrained</th>
                <th>Armor Check Penalty</th>
                <th>Key Ability</th>
                </thead>
                <tbody>
                {% for skill in skills %}
                    <tr>
                        <td>{{ skill }}</td>
                        {% for class in classes %}
                            <td>{% if class.classSkills.contains(skill) %}C{% endif %}</td>
                        {% endfor %}
                        <td>{% if skill.untrained %}Yes{% else %}No{% endif %}</td>
                        <td>{% if skill.armorCheckPenalty %}Yes{% else %}No{% endif %}</td>
                        <td>{{ skill.keyAbility|capitalize }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endblock %}