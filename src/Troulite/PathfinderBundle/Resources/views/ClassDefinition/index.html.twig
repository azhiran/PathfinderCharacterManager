{% extends '::base.html.twig' %}

{% block body -%}
    <div class="container">
        <h1>ClassDefinition list</h1>

        <table class="records_list">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Hpdice</th>
                <th>Skillpoints</th>
                <th>Bab</th>
                <th>Reflexes</th>
                <th>Fortitude</th>
                <th>Will</th>
                <th>Spellsperday</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('classes_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.hpDice }}</td>
                    <td>{{ entity.skillPoints }}</td>
                    <td>{{ entity.bab }}</td>
                    <td>{{ entity.reflexes }}</td>
                    <td>{{ entity.fortitude }}</td>
                    <td>{{ entity.will }}</td>
                    <td>{{ entity.spellsPerDay }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('classes_show', { 'id': entity.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('classes_edit', { 'id': entity.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('classes_new') }}">
                    Create a new entry
                </a>
            </li>
        </ul>
    </div>
{% endblock %}
