{% extends 'base.html.twig' %}

{% block body -%}
    <h1>{{ 'conditions'|trans }}</h1>

    <table class="table table-hover table-striped table-sm table-responsive">
        <thead>
            <tr>
                <th>{{ 'name'|trans }}</th>
                <th>{{ 'description'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('conditions_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                <td>{{ entity.shortDescription|raw }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
