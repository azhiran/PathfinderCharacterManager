{% extends 'base.html.twig' %}

{% block body -%}
<table id="abilities" class="table table-striped table-hover table-responsive">
    <thead>
    <tr>
        <th>{{ 'Level'|trans }}</th>
        <th>{{ 'Slow'|trans }}</th>
        <th>{{ 'Medium'|trans }}</th>
        <th>{{ 'Fast'|trans }}</th>
        <th>{{ 'New.feat'|trans }}</th>
        <th>{{ 'Ability.increase'|trans }}</th>
    </tr>
    </thead>
    <tbody>
    {% for key,level in advancement %}
    <tr>
        <td>{{ key }}</td>
        <td>{% if level.xp_slow > 0 %}{{ level.xp_slow }}{% else %}—{% endif %}</td>
        <td>{% if level.xp_medium > 0 %}{{ level.xp_medium }}{% else %}—{% endif %}</td>
        <td>{% if level.xp_fast > 0 %}{{ level.xp_fast }}{% else %}—{% endif %}</td>
        <td>{% if level.feat %}✓{% else %}—{% endif %}</td>
        <td>{% if level.ability %}✓{% else %}—{% endif %}</td>
    </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
