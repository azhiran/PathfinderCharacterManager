{% extends 'items/show.html.twig' %}

{% block beforeWeight %}
    <dt>{{ 'category'|trans }}</dt>
    <dd>{{ entity.category }}</dd>
    <dt>{{ 'type'|trans }}</dt>
    <dd>{{ entity.type }}</dd>
    <dt>{{ 'two_handed'|trans }}</dt>
    <dd>{{ entity.twoHanded ? 'Yes' : 'No' }}</dd>
    {% if entity.range %}
        <dt>{{ 'range'|trans }}</dt>
        <dd>{{ entity.range }}</dd>
    {% endif %}
    <dt>{{ 'damages'|trans }}</dt>
    <dd>{{ entity.damages }}</dd>
    <dt>{{ 'critical'|trans }}</dt>
    <dd>{{ entity.criticalRange }}{% if entity.criticalRange < 20 %}–20{% endif %}/×{{ entity.critical }}</dd>
{% endblock %}
