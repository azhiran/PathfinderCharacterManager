{% extends 'base.html.twig' %}

{% block subtitle entity ~ " - " ~ "equipment"|trans %}

{% block body %}
    {% include('character/character_h1.html.twig') %}
<div class="row">
    <div class="col-xs-6">
        <h2>{{ 'equipment'|trans }}</h2>
        {{ form(equipmentForm) }}
    </div>
    <div class="col-xs-6">
        <h2>
            {{ 'inventory'|trans }}
            <small>
                <a href="{{ path('character_inventory_edit', { 'id': entity.id }) }}" title="{{ 'inventory.edit'|trans }}">
                    <span class="fas fa-plus"></span>
                </a>
            </small>
        </h2>
        {{ form(inventoryForm) }}
        {{ render_esi(controller('App\\Controller\\CharacterController:notes', { 'id': entity.id, 'type': 'inventory' })) }}
    </div>
</div>
{% endblock %}
